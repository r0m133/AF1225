---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { LegalPage } from '@/pages/_LegalPage';
import { getContent } from '@/lib/i18n';

const lang = 'en';
const content = getContent(lang);
---

<BaseLayout
  lang={lang}
  metaTitle={content.legalNotice.meta.title}
  metaDescription={content.legalNotice.meta.description}
  currentPath="/legal-notice"
>
  <LegalPage lang={lang} content={content} type="legalNotice" client:load />
</BaseLayout>
