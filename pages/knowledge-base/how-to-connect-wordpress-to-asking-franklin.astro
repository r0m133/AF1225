---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { WordPressConnectionArticle } from '@/pages/_WordPressConnectionArticle';
import { getContent } from '@/lib/i18n';

const lang = 'en';
const content = getContent(lang);
const article = content.knowledgeBase.articles.find(a => a.slug === 'how-to-connect-wordpress-to-asking-franklin');
---

<BaseLayout
  lang={lang}
  metaTitle={`${article?.title || 'How to Connect WordPress'} - ${content.siteName}`}
  metaDescription={article?.excerpt || 'Learn how to connect your WordPress site to Asking Franklin for seamless content publishing.'}
  currentPath="/knowledge-base/how-to-connect-wordpress-to-asking-franklin"
>
  <WordPressConnectionArticle lang={lang} client:load />
</BaseLayout>


