---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { LegalPage } from '@/pages/_LegalPage';
import { getContent } from '@/lib/i18n';

const lang = 'en';
const content = getContent(lang);
---

<BaseLayout
  lang={lang}
  metaTitle={content.terms.meta.title}
  metaDescription={content.terms.meta.description}
  currentPath="/terms"
>
  <LegalPage lang={lang} content={content} type="terms" client:load />
</BaseLayout>