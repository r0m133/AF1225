---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { KnowledgeBase } from '@/pages/_KnowledgeBase';
import { getContent } from '@/lib/i18n';

const lang = 'en';
const content = getContent(lang);
---

<BaseLayout
  lang={lang}
  metaTitle={content.knowledgeBase.meta.title}
  metaDescription={content.knowledgeBase.meta.description}
  currentPath="/knowledge-base"
>
  <KnowledgeBase lang={lang} content={content} client:load />
</BaseLayout>
